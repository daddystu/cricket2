<h1>Listing points</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Team</th>
    <th>Batting</th>
    <th>Bowling</th>
    <th>Match</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.match_id %></td>
    <td><%= point.team_id %></td>
    <td><%= point.batting %></td>
    <td><%= point.bowling %></td>
    <td><%= point.match %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

